<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS39B.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Beige" Padding="24" CornerRadius="0">
            <Label Text="navegación entre ventanas S3" HorizontalTextAlignment="Center" TextColor="Black" FontSize="18"/>
        </Frame>

        <Entry x:Name="txtusuario" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="txtcontraseña" Placeholder="Ingrese la contraseña" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="Abrir ventana dos" Clicked="btnAbrir_Clicked"/>

    </StackLayout>

</ContentPage>
